
@{
    ViewData["Title"] = "Index";
}

@model List<AdminModel.RolViewModel>


<div class="row mt-4">
    <div class="col-md-7 offset-md-2">
        <h1>Rol Listesi</h1>
    </div>
    <div class="col-md-1">
        <a class="btn btn-primary" asp-controller="Roles" asp-action="RoleCreate" asp-area="Admin">Rol Ekle</a>
    </div>
</div>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Rol Adı</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

